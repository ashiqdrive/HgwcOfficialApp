<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_audio_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hgwcapp.hgwcofficialapp.AudioPlayer">

    <TextView
        android:id="@+id/tvAudioNameAudPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Audio Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAudioNameAudPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp" />

    <ImageView
        android:src="@drawable/playiconblack72"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivPlayAudPlay"
        android:layout_below="@+id/seekBar1"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:layout_marginLeft="100dp" />

    <ImageView
        android:src="@drawable/stopiconblack72"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivStopAudPlay"
        android:layout_below="@+id/seekBar1"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/ivPlayAudPlay"
        android:layout_toEndOf="@+id/ivPlayAudPlay"
        android:clickable="true"
        android:layout_marginLeft="50dp"/>


</RelativeLayout>
