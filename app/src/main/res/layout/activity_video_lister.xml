<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/horizontal_margin_forListView"
    android:paddingRight="@dimen/horizontal_margin_forListView"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hgwcapp.hgwcofficialapp.VideoLister">

    <TextView
        android:id="@+id/videoNameinLister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Video Lanuage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="5dp" />

    <View
        android:id="@+id/lineSeparatorForVideo"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/videoNameinLister"
        android:background="@color/bt_text_color"/>

    <ListView
        android:id="@+id/lvVideoLister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineSeparatorForVideo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp" />



</RelativeLayout>
